@page "/admin/vozidla/vytvorit"
@page "/admin/vozidla/vytvorit/{Id}"
@using Simt.Common.enums

<EditForm Model="Vehicle" OnValidSubmit="Save">
    <DataAnnotationsValidator/>
    
    <div class="half">
        <div>
            <div class="hasShort">
                <div>
                    Výrobce
                    <br>
                    <InputText @bind-Value="@Vehicle.Manufacturer"/>
                    <small class="form-text text-danger">
                        <ValidationMessage For="@(() => Vehicle.Manufacturer)"/>
                    </small>
                </div>
                <div>
                    Zkratka
                    <br>
                    <InputText @bind-Value="@Vehicle.ManufacturerShort"/>
                    <small class="form-text text-danger">
                        <ValidationMessage For="@(() => Vehicle.ManufacturerShort)"/>
                    </small>
                </div>
            </div>
            <div class="hasShort">
                <div>
                    Typ
                    <br>
                    <InputText @bind-Value="@Vehicle.Type"/>
                    <small class="form-text text-danger">
                        <ValidationMessage For="@(() => Vehicle.Type)"/>
                    </small>
                </div>
                <div>
                    Zkratka
                    <br>
                    <InputText @bind-Value="@Vehicle.TypeShort"/>
                    <small class="form-text text-danger">
                        <ValidationMessage For="@(() => Vehicle.TypeShort)"/>
                    </small>
                </div>
            </div>
            <div class="hasShort">
                <div>
                    Dopravní podnik
                    <br>
                    <InputText @bind-Value="@Vehicle.Operator"/>
                    <small class="form-text text-danger">
                        <ValidationMessage For="@(() => Vehicle.Operator)"/>
                    </small>
                </div>
                <div>
                    Zkratka
                    <br>
                    <InputText @bind-Value="@Vehicle.OperatorShort"/>
                    <small class="form-text text-danger">
                        <ValidationMessage For="@(() => Vehicle.OperatorShort)"/>
                    </small>
                </div>
            </div>
            <div>
                Evidenční číslo
                <br>
                <InputText @bind-Value="@Vehicle.VehicleNumber"/>
            </div>
            <div>
                SCIN číslo
                <br>
                <InputText @bind-Value="@Vehicle.SCIN"/>
            </div>
            <div>
                Velikost B
                <br>
                <InputText @bind-Value="@Vehicle.SizeB"/>
            </div>
            <div>
                Určení linka
                <br>
                <InputText @bind-Value="@Vehicle.Line"/>
            </div>
            <div>
                Autor
                <br>
                <InputText @bind-Value="@Vehicle.Author"/>
            </div>
            <div>
                Verze<br><i>oddělovat čárkou</i>
                <br>
                <InputText @bind-Value="@Vehicle.GameVersion"/>
            </div>
        </div>
        <div>
            <div>
                Status
                <InputSelect @bind-Value="@Vehicle.Status">
                    @foreach (var status in Enum.GetValues(typeof(Status)).Cast<Status>())
                    {
                        <option value="@status">@status</option>
                    }
                </InputSelect>
            </div>
            <div>
                Trakce
                <InputSelect @bind-Value="@Vehicle.Traction">
                    @foreach (var traction in Enum.GetValues(typeof(Traction)).Cast<Traction>())
                    {
                        <option value="@traction">@traction</option>
                    }
                </InputSelect>
            </div>
            <div>
                Zlatá verze
                <RadzenSwitch @bind-Value="@Vehicle.GoldVersion" Change="@(args => FlipGoldVersion(args))" />
            </div>
            <div>
                Alternativní pohon
                <RadzenSwitch @bind-Value="@Vehicle.AlternativeDrive" Change="@(args => FlipAlternativeDrive(args))" />
            </div>
            <div>
                Obousměrnost
                <RadzenSwitch @bind-Value="@Vehicle.TwoWay" Change="@(args => FlipTwoWay(args))" />
            </div>
            <div>
                Diesel pohon
                <RadzenSwitch @bind-Value="@Vehicle.DieselDrive" Change="@(args => FlipDieselDrive(args))" />
            </div>
            <div>
                CNG pohon
                <RadzenSwitch @bind-Value="@Vehicle.CngDrive" Change="@(args => FlipCNGDrive(args))" />
            </div>
            <div>
                Bateriový pohon
                <RadzenSwitch @bind-Value="@Vehicle.BatteryDrive" Change="@(args => FlipBatteryDrive(args))" />
            </div>
            <div>
                Klimatizace salónu
                <RadzenSwitch @bind-Value="@Vehicle.AirConditioning" Change="@(args => FlipAirConditioning(args))" />
            </div>
            <div>
                Nízkopodlažnost
                <InputSelect @bind-Value="@Vehicle.LowFloor">
                    @foreach (var option in Enum.GetValues(typeof(LowFloor)).Cast<LowFloor>())
                    {
                        <option value="@option">@option</option>
                    }
                </InputSelect>
            </div>
            <button type="submit" class="btn btn-success">Uložiť</button>
        </div>
    </div>
</EditForm>

<style>
    .half {
        display: flex;
        gap: 100px;
    }
    .hasShort{
        display: flex;
        gap: 20px;
    }
</style>